{
  "editor.formatOnSave": true,
  "files.associations": {
    "rush.json": "jsonc",
    "common-versions.json": "jsonc",
    "command-line.json": "jsonc",
    "version-policies.json": "jsonc"
  },
  "prettier.prettierPath": "./packages/emitter/node_modules/prettier",
  "eslint.run": "onSave",
  "eslint.nodePath": "./packages/eslint-config/node_modules/eslint",
  "eslint.useESLintClass": true,
  "cadl.cadl-server.path": "${workspaceRoot}/packages/emitter/node_modules/@cadl-lang/compiler",
  "typescript.tsdk": "./packages/emitter/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "cSpell.words": ["cadl", "safeint"],
  "files.exclude": {
    "**/.rush": true
  }
}
